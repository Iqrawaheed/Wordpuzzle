<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent" android:layout_height="200dp"
    android:elevation="5dp"
    app:cardUseCompatPadding="true"
    android:orientation="vertical">



    <TextView android:id="@+id/textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Game Player"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="30dp"
        android:textStyle="bold|italic">
    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="vertical"
        android:padding="15dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView android:id="@+id/uname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/uname"
                android:layout_marginLeft="10dp"
                android:text="This is Name"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:ignore="NotSibling">
            </TextView>
            <TextView
                android:id="@+id/ulevel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/uname"
                android:layout_marginLeft="10dp"
                android:text="This is Level"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold">
            </TextView>
            <TextView
                android:id="@+id/ucat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ulevel"
                android:layout_marginLeft="10dp"
                android:text="This is Category"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:ignore="NotSibling">
            </TextView>
            <TextView
                android:id="@+id/uscor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ucat"
                android:layout_marginLeft="10dp"
                android:text="This is Scor"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:ignore="NotSibling">
            </TextView>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
<!--            <ImageView-->
<!--                android:id="@+id/editicon"-->
<!--                android:layout_width="193dp"-->
<!--                android:layout_height="40dp"-->
<!--                android:src="@drawable/baseline_edit_24"/>-->
            <ImageView
                android:id="@+id/deleteicon"
                android:layout_width="193dp"
                android:layout_height="40dp"
                android:layout_marginLeft="80dp"
                android:src="@drawable/baseline_delete_24"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>